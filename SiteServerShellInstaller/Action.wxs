<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <Property Id="WixSilentExecCmdLine" Value="command line to run" Hidden="no"/>
    <CustomAction Id="InstallService" Directory="INSTALLDIR" ExeCommand ="Install.bat" Execute="immediate" Return="check" />
    <CustomAction Id="ShellServiceInstall" Directory="INSTALLDIR" ExeCommand ="Acr.SiteServer.Shell.exe install -webapi:http://localhost:2000/" Execute="immediate" Return="check" />
    <CustomAction Id="ShellServiceStart" Directory="INSTALLDIR" ExeCommand ="Acr.SiteServer.Shell.exe start" Execute="immediate" Return="check"/>
    <CustomAction Id="ShellServiceStop" Directory="INSTALLDIR" ExeCommand ="Acr.SiteServer.Shell.exe stop" Execute="immediate" Return="check"/>
    <CustomAction Id="ShellServiceUninstall" Directory="INSTALLDIR" ExeCommand ="Acr.SiteServer.Shell.exe uninstall" Execute="immediate" Return="check" />
  </Fragment>
</Wix>
